@model IEnumerable<QuanLyDoAn.Models.GiangVienHuongDanTheoKy>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Giảng Viên Đã Đăng Ký Hướng Dẫn</h2>

<table class="table table-bordered text-wrap">
    <tr class="table-primary">
        <th>
            Tên Giảng Viên
        </th>
        <th>
            Số lượng sinh viên hướng dẫn
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.GvhdTheoKy)
    {
        <tr>
            <td>
                @item.HoTen
            </td>
            <td>
                @item.SoLuongSinhVienHuongDan
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.Id })
            </td>
        </tr>
    }

</table>
